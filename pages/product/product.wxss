/* pages/product/product.wxss */
/* 九宫格 */
/* 1；父元素弹性布局 */
.index-nav{
  display: flex;
  flex-wrap: wrap;
}
/* 2；子元素弹性布局 image/text */
.index-nav .nav-item{
  height:160rpx;
  width: 25%;
  box-sizing: border-box;
  /* border: 1px solid #ddd; */
  /*  item 子元素弹性布局*/
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* 小程序文字大小px */
  font-size: 14px;
}

/* 3：修改图片高度宽度 */
.index-nav image{
  width: 150rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
}
/*今日特价*/
.pro_tejia{
  text-align: center;
  font-size: 16px;
  background:rgb(235, 228, 229);
  color: lightcoral;
}
/* 添加灰色分隔块 */
.divider{
  height: 20rpx;
  background-color: #f1f1f1;
}

/*今日特价*/
scroll-view {
    width: 99%;
    white-space: nowrap;
}

.item-content {
    width: 25%;
    display: inline-block;
    
    text-align: center;
}
.item-content image{
    width: 100%;
    height: 180rpx;
}
.pro_content{
  font-size: 16px;
  color: red;
}
.item-content .pro_content:last-child{
  text-decoration:line-through;
  font-size: 12px;
  color: black
}