/* pages/news/news.wxss */
page{
  background: #f1f1f1;
}
/* 2 卡片 */
.card{
  background: white;
  border: 1px solid #ddd;
  border-radius:20rpx;
  margin: 60rpx 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  
}
/* 3标题 */
.card-title{
  font-size: 18px;
  margin-bottom: 5rpx;
}
/*4 日期and下划线 */
.card-date{
  font-size: 14px;
  color:#ccc;
  padding-bottom: 5rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #ddd;
}
/*5 图片 */
.card-img{
  width: 100%;
  height: 300rpx;
}
/*6 描述 */
.card-desc{
  font-size: 16px;
  color: #333;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #ddd;
  margin: 10rpx 0;
}
/*7 查看详细 */
.card-read{
  font-size: 14px;
  color: #666;
}
