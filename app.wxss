/**app.wxss**/
/* 全局样式文件 */

/* 功能一：通用箭头样式 */
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center
}
.arrow::after{
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg)
}
/* 2 */
.divider{
  height: 20rpx;
  background: #f1f1f1;
}
/* 3 */
.cell{
   background: #fff;
   font-size:16px;
}
.cell-item{
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 30rpx;
}
/* 功能4 通用单行超出范围并添加省略号 */
.ell{
  overflow: hidden;
  white-space: nowrap;     /* 不许换行 */
  text-overflow: ellipsis;      /* 超出部分添加*/
}